@page
@model InterviewsApp.WebApp.Pages.Details.PositionModel
@{
    ViewData["Title"] = "Просмотр вакансии";
}
<style>
    td {
        padding:10px;
    }
    td.comment-cell {
        width:70%;
    }
    textarea {
        width:100%;
    }
</style>
<div>
    <h3 id="position-name">Просмотр вакансии</h3>

    <table style="width:100%">
        <tr>
            <td>Город:</td>
            <td id="city-name"></td>
        </tr>
        <tr>
            <td>Компания:</td>
            <td id="company-name"></td>
        </tr>
        <tr>
            <td>Комментарий:</td>
            <td id="comment" class="comment-cell"></td>
            <td style="display:none;"  class="comment-cell"><textarea id="comment-edit-input"></textarea></td>
            <td><button id="edit-comment" onclick="editComment()"></button></td>
            <td style="display:none;"><button id="confirm-comment"  onclick="confirmComment('@Model.PositionId')"></button></td>
            <td style="display:none;"><button id="discard-comment"  onclick="discardComment()"></button></td>
        </tr>
    </table>
    
    <button id="edit-button" onclick="editPosition()">Редактировать</button>
    
    <p id="message"></p>
</div>
<script src="/js/details-pages/position-details.js"></script>
<script>getPositionInfo('@Model.PositionId')</script>
