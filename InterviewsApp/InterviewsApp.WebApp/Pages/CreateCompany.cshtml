@page
@model InterviewsApp.WebApp.Pages.CreateCompanyModel
@{
    ViewData["Title"] = "Добавление компании";
}
<style>
    td {
        padding:10px;
    }
</style>
<div>
    <p>Форма добавления компании.</p>

    <table>
        <tr>
            <td>Название компании</td>
            <td><input id="company-name" type="text" /></td>
        </tr>
    </table>
    
    <button id="create-button" onclick="createCompany()">Добавить компанию</button>
    
    <p id="message"></p>
    <a id="manual-redirect" style="visibility:hidden" href="/" >Вернуться на главную страницу</a>
</div>

<script src="/js/create-company-page.js"></script>