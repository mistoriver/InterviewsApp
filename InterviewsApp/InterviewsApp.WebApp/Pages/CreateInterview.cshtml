@page
@model InterviewsApp.WebApp.Pages.CreateInterviewModel
@{
}
<style>
    td {
        padding:10px;
    }
</style>
<div>
    <p>Форма создания собеседований.</p>

    <table>
        <tr>
            <td>Название собеседования</td>
            <td><input type="text" /></td>
        </tr>
        <tr>
            <td>Время собеседования</td>
            <td><input type="datetime-local" /></td>
        </tr>
        <tr>
            <td>Вакансия</td>
            <td><select id="position-select"></select></td>
            <td id="hidden-button-cell" style="display:none"><button onclick="location.assign('/CreatePosition')">Добавить вакансию</button></td>
        </tr>
    </table>
    
    <button id="create-button" onclick="createInterview()">Создать собеседование</button>
</div>

<script src="~/js/create-interview-page.js"></script>
<script>getPositions()</script>